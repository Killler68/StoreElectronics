<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="166dp"
    android:layout_height="220dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginTop="12dp"
    android:id="@+id/recycler_best_seller_item"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_phone_item_best_seller"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_best_seller_phone_item" />

        <TextView
            android:id="@+id/text_current_price_item_best_seller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="@string/current_price_best_seller"
            android:textColor="#010035"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_phone_item_best_seller" />

        <TextView
            android:id="@+id/text_price_item_best_seller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/price_best_seller"
            android:textColor="#CCCCCC"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/text_current_price_item_best_seller"
            app:layout_constraintTop_toBottomOf="@+id/image_phone_item_best_seller" />

        <TextView
            android:id="@+id/text_name_phone_item_best_seller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginEnd="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/name_phone_best_seller"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_current_price_item_best_seller"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/image_background_favorite_item_best_seller"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/image_background_category_false" />

        <ImageView
            android:id="@+id/image_favorite_item_best_seller"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_background_favorite_item_best_seller"
            app:layout_constraintEnd_toEndOf="@+id/image_background_favorite_item_best_seller"
            app:layout_constraintTop_toTopOf="@+id/image_background_favorite_item_best_seller"
            app:layout_constraintStart_toStartOf="@+id/image_background_favorite_item_best_seller"
            app:srcCompat="@drawable/image_favorite"
            app:tint="@color/orange" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>